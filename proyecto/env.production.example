# DuocPoint - Configuración de Producción
# Copia este archivo como .env y configura las variables

# Base de datos PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=duocpoint_prod
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_HOST=localhost
DB_PORT=5432

# Configuración de Django
DEBUG=False
SECRET_KEY=tu_secret_key_muy_segura_aqui
ALLOWED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# Configuración de archivos estáticos
STATIC_URL=/static/
STATIC_ROOT=/var/www/duocpoint/static/

# Configuración de archivos multimedia
MEDIA_URL=/media/
MEDIA_ROOT=/var/www/duocpoint/media/

# Configuración de email (opcional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_password_email

# Configuración de Redis para cache (opcional)
REDIS_URL=redis://localhost:6379/1

# Configuración de Celery (opcional)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Configuración de seguridad
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/duocpoint/django.log
